    <record model="ir.ui.view" id="mrp_bom_line_view_tree">
        <field name="model">mrp.bom.line</field>
        <field name="inherit_id" ref="mrp_bom_component_menu.mrp_bom_line_tree_view"/>
        <field name="arch" type="xml">
            <field name="product_id" position="attributes">
                <attribute name="string">Product Variant</attribute>
            </field>
            <field name="product_id" position="before">
                <field name="product_tmpl_id" string="Product" />
                <field name="possible_value_ids" invisible="1"/>
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="mrp_bom_line_view_search">
        <field name="model">mrp.bom.line</field>
        <field name="inherit_id" ref="mrp_bom_component_menu.mrp_bom_line_view_filter"/>
        <field name="arch" type="xml">
            <field name="product_id" position="attributes">
                <attribute name="string">Product Variant</attribute>
            </field>
            <field name="product_id" position="before">
                <field name="product_tmpl_id" string="Product" />
            </field>
            <filter name="product" position="attributes">
                <attribute name="string">Product Variant</attribute>
            </filter>
            <filter name="product" position="before">
                <filter name="product_tmpl"
                        string="Product"
                        context="{'group_by':'product_tmpl_id'}"/>
            </filter>
        </field>
    </record>
