<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.ui.view" id="product_version_workorder_form">
        <field name="name">product.version.workorder.form</field>
        <field name="model">mrp.workorder</field>
        <field name="inherit_id" ref="mrp.mrp_production_workorder_form_view_inherit"/>
        <field name="arch" type="xml">
            <field name="product_id" position="after">
                    <field name="product_attribute_ids"
                           context="{'show_attribute': False}"
                           attrs="{'invisible':[('product_attribute_ids','=',[])], 'readonly': True}"
                           options="{'no_create': True, 'no_delete': True}">
                        <tree create="0" delete="0" editable="1">
                            <field name="attribute_id"/>
                            <field name="value_id" options="{'no_create': True}"/>
                            <field name="possible_value_ids" invisible="1"/>
                        </tree>
                    </field>
                    <field name="custom_value_ids" context="{'show_attribute': False}" readonly="True">
                        <tree string="Product Version Line" editable="bottom" create="false">
                            <field name="attribute_id"/>
                            <field name="value_id" domain="[('attribute_id','=',attribute_id)]"/>
                            <field name="custom_value"/>
                        </tree>
                    </field>
                    <field name="product_version_id" readonly="True"/>
            </field>
        </field>
    </record>
</odoo>