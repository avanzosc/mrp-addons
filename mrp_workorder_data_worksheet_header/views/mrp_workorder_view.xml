<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="workorder_data_worksheet_form" model="ir.ui.view">
        <field name="name">workorder.data.worksheet.form</field>
        <field name="model">mrp.workorder</field>
        <field name="inherit_id" ref="mrp.mrp_production_workorder_form_view_inherit"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='worksheet_type']" position="before">
                <button name="show_worksheet" type="object" string="Print with header"/>
                <label for="worksheet_header" string="PDF"/>
                <field name="worksheet_header"/>
            </xpath>
        </field>
    </record>

</odoo>
