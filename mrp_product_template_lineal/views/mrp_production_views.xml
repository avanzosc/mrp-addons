<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="mrp_production_form_view" model="ir.ui.view">
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view" />
        <field name="arch" type="xml">
            <field name="product_id" position="after">
                <field name="lineal_id" readonly="1" />
            </field>
            <xpath
        expr="//field[@name='move_finished_ids']/tree/field[@name='product_id']"
        position="after"
      >
                <field name="lineal_id" readonly="1" />
            </xpath>
            <xpath
        expr="//field[@name='move_raw_ids']/tree/field[@name='product_id']"
        position="after"
      >
                <field name="lineal_id" readonly="1" />
            </xpath>
            <xpath
        expr="//field[@name='move_byproduct_ids']/tree/field[@name='product_id']"
        position="after"
      >
                <field name="lineal_id" readonly="1" />
            </xpath>
        </field>
    </record>


    <record id="mrp_production_tree_view" model="ir.ui.view">
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_tree_view" />
        <field name="arch" type="xml">
            <field name="product_id" position="after">
                <field name="lineal_id" readonly="1" />
            </field>
        </field>
    </record>

    <record id="view_mrp_production_filter" model="ir.ui.view">
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.view_mrp_production_filter" />
        <field name="arch" type="xml">
            <field name="product_id" position="after">
                <field name="lineal_id" readonly="1" />
            </field>
            <filter name="product" position="after">
                <filter
          string="Lineal"
          name="lineal"
          domain="[]"
          context="{'group_by':'lineal_id'}"
        />
            </filter>
        </field>
    </record>
</odoo>
