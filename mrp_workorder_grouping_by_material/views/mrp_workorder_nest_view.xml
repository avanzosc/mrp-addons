<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.ui.view" id="mrp_workorder_nest_search">
        <field name="name">mrp.workorder.nest.search</field>
        <field name="model">mrp.workorder.nest</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="code"/>
                <filter name="actives" string="Actives" domain="[('done_cancel_lines', '=', False)]"/>
                <group expand="1" string="Group By">
                    <filter name="group_main_product_id" string="Main Material" domain="[]" context="{'group_by': 'main_product_id'}"/>
                    <filter name="group_date_planned_start" string="Planned Start Date" domain="[]" context="{'group_by': 'date_planned_start'}"/>
                </group>
            </search>
        </field>
    </record>

    <record model="ir.ui.view" id="mrp_workorder_nest_tree">
        <field name="name">mrp.workorder.nest.tree</field>
        <field name="model">mrp.workorder.nest</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="code"/>
                <field name="main_product_id"/>
                <field name="lot_id"/>
                <field name="date_planned_start"/>
                <field name="done_cancel_lines" invisible="1"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="mrp_workorder_nest_form">
        <field name="name">mrp.workorder.nest.form</field>
        <field name="model">mrp.workorder.nest</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="nest_start" type="object" string="Start"
                            class="btn-info" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                    <button name="nest_draft" type="object" string="Draft"
                            class="btn-info" attrs="{'invisible': [('state', '!=', 'ready')]}"/>
                    <button name="nest_blocked" type="object" string="Block"
                            class="btn-danger" attrs="{'invisible': [('state', '=', 'blocked')]}"/>
                    <button name="nest_unblocked" type="object" string="Unblock"
                            class="btn-info" attrs="{'invisible': [('state', '!=', 'blocked')]}"/>
                    <button name="button_finish" type="object" string="Finish Order"
                            class="btn-info" attrs="{'invisible': ['|', '|', '|', ('state', '=', 'blocked'), ('line_state', '!=', 'progress'), ('line_is_produced', '=', False), ('state', '=', 'draft')]}" />
                    <button name="button_start" type="object"
                            string="Start Working" attrs="{'invisible': ['|', '|', '|', ('state', '=', 'blocked'), ('line_state', '=', 'blocked'), ('line_state', '!=', 'draft'), ('state', '=', 'draft')]}"/>
                    <button name="button_start" type="object" string="Start Working"
                            class="btn-success" attrs="{'invisible': ['|', '|', '|', ('state', '=', 'blocked'), ('line_state', '=', 'blocked'), ('line_state', '!=', 'ready'), ('state', '=', 'draft')]}" />
                    <button name="record_production" type="object" string="Done"
                            class="btn-success" attrs="{'invisible': ['|', '|', '|', '|', '|', ('state', '=', 'blocked'), ('line_is_produced', '=', True), ('line_state', '=', 'blocked'), ('line_state', '!=', 'progress'), ('line_is_user_working', '=', False), ('state', '=', 'draft')]}"/>
                    <button name="button_pending" type="object" string="Pause"
                            class="btn-warning" attrs="{'invisible': ['|', '|', '|', '|', ('state', '=', 'blocked'), ('line_working_state', '=', 'blocked'), ('line_state', 'in', ('done', 'pending', 'ready', 'cancel')), ('line_is_user_working', '=', False), ('state', '=', 'draft')]}"/>
                    <button name="button_unblock" type="object" string="Unblock"
                            class="btn-danger" attrs="{'invisible': ['|', '|', ('state', '=', 'blocked'), ('line_state', '!=', 'blocked'), ('state', '=', 'draft')]}"/>
                    <button name="button_start" type="object"
                            string="Continue Production" attrs="{'invisible': ['|', '|', '|', '|', '|', ('state', '=', 'blocked'), ('line_production_state', '=', 'done'), ('line_working_state', '=', 'blocked'), ('line_is_user_working', '=', True), ('line_state', '!=', 'progress'), ('state', '=', 'draft')]}"/>
                    <button name="button_scrap" type="object"
                            string="Scrap" attrs="{'invisible': ['|', '|', ('state', '=', 'blocked'), ('line_state', 'in', ('done', 'cancel')), ('state', '=', 'draft')]}"/>
                    <!--<button name="%(mrp.act_mrp_block_workcenter_wo)d" type="action" context="{'default_workcenter_id': workcenter_id}" string="Block" class="btn-danger" attrs="{'invisible': ['|', ('line_working_state', '=', 'blocked'), ('line_state', 'in', ('done', 'pending', 'ready', 'cancel')), ('state', '!=', 'draft')]}"/>-->
                    <field name="state" widget="statusbar" statusbar_visible="blocked,draft,ready,progress,done"/>
                    <field name="line_state" invisible="1"/>
                    <field name="line_working_state" invisible="1"/>
                    <field name="line_production_state" invisible="1"/>
                    <field name="line_is_user_working" invisible="1"/>
                    <field name="line_is_produced" invisible="1"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" nolabel="1"/>/
                            <field name="code"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="worksheets"/>
                            <button name="show_worksheets" type="object" string="merge pdfs"/>
                            <field name="possible_main_product_ids" invisible="1"/>
                            <field name="main_product_id" domain="[('id', 'in', possible_main_product_ids)]"/>
                            <field name="possible_workcenter_ids" invisible="1"/>
                            <field name="workcenter_id" domain="[('id', 'in', possible_workcenter_ids)]"/>
                            <field name="main_product_tracking" invisible="1"/>
                            <field name="company_id" invisible="1"/>
                            <field name="lot_id" attrs="{'readonly': [('state', '!=', 'draft')], 'invisible': [('main_product_tracking', '=', 'none')]}" domain="[('product_id', '=', main_product_id),('product_life_alert', '=', False)]" context="{'default_product_id': main_product_id, 'default_company_id': company_id}"/>
                            <field name="date_planned_start"/>
                        </group>
                    </group>
                    <div>
                        <field name="nested_line_ids">
                            <tree editable="top" attrs="{'readonly': [('state', '=', 'blocked')]}" decoration-success="ok_line" decoration-danger="working_state == 'blocked'">
                                <button name="open_line" type="object" string="Open Line" icon="fa-bars"/>
                                <field name="nest_id" invisible="1"/>
                                <field name="ok_line" />
                                <field name="possible_workorder_ids" invisible="1"/>
                                <field name="workorder_id" create="0" domain="[('id', 'in', possible_workorder_ids)]"/>
                                <field name="date_planned_start"/>
                                <field name="name" readonly="1"/>
                                <button name="show_worksheet" type="object" icon="fa-archive"/>
                                <field name="product_id" readonly="1"/>
                                <field name="qty_producing"/>
                                <field name="company_id" invisible="1"/>
                                <field name="finished_lot_id" string="Product to Produce Lot" context="{'default_product_id': product_id, 'default_company_id': company_id}"/>
                                <field name="lot_id" invisible="1" string="Main Material Lot"/>
                                <field name="qty_produced" readonly="1"/>
                                <field name="qty_remaining" readonly="1"/>
                                <field name="qty_nested" readonly="1"/>
                                <field name="qty_production" readonly="1"/>
                                <field name="product_uom_id" readonly="1"/>
                                <field name="workcenter_id" readonly="1"/>
                                <field name="production_id" readonly="1"/>
                                <field name="date_planned_start" readonly="1"/>
                                <field name="state" readonly="1"/>
                                <field name="working_state" invisible="1"/>
                            </tree>
                            <form>
                                <header>
<!--                                    <button name="button_finish" type="object" string="Finish Order"-->
<!--                                            attrs="{'invisible': ['|', ('state', '!=', 'progress'), ('is_produced', '=', False)]}"-->
<!--                                            class="btn-info"/>-->
<!--                                    <button name="button_start" type="object" string="Start Working"-->
<!--                                            attrs="{'invisible': ['|', ('working_state', '=', 'blocked'), ('state', '!=', 'pending')]}"/>-->
<!--                                    <button name="button_start" type="object" string="Start Working"-->
<!--                                            attrs="{'invisible': ['|', ('working_state', '=', 'blocked'), ('state', '!=', 'ready')]}"-->
<!--                                            class="btn-success"/>-->
<!--                                    <button name="record_production" type="object" string="Done" class="btn-success"-->
<!--                                            attrs="{'invisible': ['|', '|', '|', ('is_produced', '=', True), ('working_state', '=', 'blocked'), ('state', '!=', 'progress'), ('is_user_working', '=', False)]}"/>-->
<!--                                    <button name="button_pending" type="object" string="Pause" class="btn-warning"-->
<!--                                            attrs="{'invisible': ['|', '|', ('working_state', '=', 'blocked'), ('state', 'in', ('done', 'pending', 'ready', 'cancel')), ('is_user_working', '=', False)]}"/>-->
<!--                                    <button name="button_start" type="object" string="Continue Production"-->
<!--                                            attrs="{'invisible': ['|', '|', '|', ('production_state', '=', 'done'), ('working_state', '=', 'blocked'), ('is_user_working', '=', True), ('state', '!=', 'progress')]}"/>-->
<!--                                    <button name="button_scrap" type="object" string="Scrap"-->
<!--                                            attrs="{'invisible': [('state', 'in', ('done', 'cancel'))]}"/>-->
                                    <button name="mrp.act_mrp_block_workcenter_wo" type="action"
                                            context="{'default_workcenter_id': workcenter_id}" string="Block"
                                            class="btn-danger"
                                            attrs="{'invisible': ['|', '|', ('working_state', '=', 'blocked'), ('state', 'in', ('done', 'pending', 'ready', 'cancel')), ('is_user_working', '=', False)]}"/>
                                    <button name="button_unblock" type="object" string="Unblock" class="btn-danger" attrs="{'invisible': [('working_state', '!=', 'blocked')]}"/>

                                    <button name="button_quality_alert" type="object" string="Quality Alert"
                                            attrs="{'invisible': [('state', 'in', ('done', 'cancel'))]}"/>
                                    <field name="state" widget="statusbar"
                                           statusbar_visible="pending,ready,progress,done"/>
                                </header>
                                <sheet>
                                    <group colspan="4" col="4">
                                        <group colspan="2">
                                            <field name="nest_id" invisible="1"/>
                                            <group invisible="1">
                                                <field name="possible_workorder_ids" string="Possible Workorders"/>
                                            </group>
                                            <field name="workorder_id" no_create="1" domain="[('id', 'in', possible_workorder_ids)]"/>
                                            <field name="name" readonly="1"/>
                                            <field name="product_id" readonly="1"/>
                                            <field name="qty_producing"/>
                                            <field name="company_id" invisible="1"/>
                                            <field name="finished_lot_id" string="Product to Produce Lot"
                                                   context="{'default_product_id': product_id, 'default_company_id': company_id}"/>
                                            <field name="lot_id" invisible="1" string="Main Material Lot"/>
                                            <field name="qty_produced" readonly="1"/>
                                            <field name="qty_remaining" readonly="1"/>
                                            <field name="qty_nested" readonly="1"/>
                                            <field name="qty_production" readonly="1"/>
                                        </group>
                                        <group colspan="2">
                                            <field name="product_uom_id" readonly="1"/>
                                            <field name="workcenter_id" readonly="1"/>
                                            <field name="production_id" readonly="1"/>
                                            <field name="date_planned_start" readonly="1"/>
                                            <field name="state" readonly="1"/>
                                            <field name="working_state" invisible="1"/>
                                            <field name="production_state" invisible="1"/>
                                            <field name="is_user_working" invisible="1"/>
                                            <field name="is_produced" invisible="1"/>
                                        </group>
                                    </group>
                                </sheet>
                            </form>
                        </field>
                    </div>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="mrp_workorder_nest_line_form">
        <field name="name">mrp.workorder.nest.line.form</field>
        <field name="model">mrp.workorder.nest.line</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="mrp.act_mrp_block_workcenter_wo" type="action"
                            context="{'default_workcenter_id': workcenter_id}" string="Block"
                            class="btn-danger"
                            attrs="{'invisible': ['|', '|', ('working_state', '=', 'blocked'), ('state', 'in', ('done', 'pending', 'ready', 'cancel')), ('is_user_working', '=', False)]}"/>
                    <button name="button_unblock" type="object" string="Unblock" class="btn-danger"
                            attrs="{'invisible': [('working_state', '!=', 'blocked')]}"/>

                    <button name="button_quality_alert" type="object" string="Quality Alert"
                            attrs="{'invisible': [('state', 'in', ('done', 'cancel'))]}"/>
                    <button name="button_get_previous_line" string="&#60;" type="object"/>
                    <button name="button_get_next_line" string="&#62;" type="object"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="pending,ready,progress,done"/>
                </header>
                <sheet>
                    <notebook>
                        <page string="Data">
                            <group colspan="4" col="4">
                                <group colspan="2">
                                    <field name="nest_id" invisible="1"/>
                                    <field name="possible_workorder_ids" string="Possible Workorders" invisible="1"/>
                                    <field name="workorder_id" options="{'no_create': True}"
                                           domain="[('id', 'in', possible_workorder_ids)]"/>
                                    <field name="name" readonly="1"/>
                                    <field name="product_id" readonly="1"/>
                                    <field name="qty_producing"/>
                                    <field name="company_id" invisible="1"/>
                                    <field name="finished_lot_id" string="Product to Produce Lot"
                                           context="{'default_product_id': product_id, 'default_company_id': company_id}"/>
                                    <field name="lot_id" invisible="1" string="Main Material Lot"/>
                                    <field name="qty_produced" readonly="1"/>
                                    <field name="qty_remaining" readonly="1"/>
                                    <field name="qty_nested" readonly="1"/>
                                    <field name="qty_production" readonly="1"/>
                                </group>
                                <group colspan="2">
                                    <field name="product_uom_id" readonly="1"/>
                                    <field name="workcenter_id" readonly="1"/>
                                    <field name="production_id" readonly="1"/>
                                    <field name="date_planned_start" readonly="1"/>
                                    <field name="state" readonly="1"/>
                                    <field name="working_state" invisible="1"/>
                                    <field name="production_state" invisible="1"/>
                                    <field name="is_user_working" invisible="1"/>
                                    <field name="is_produced" invisible="1"/>
                                    <field name="ok_line" nolabel="1" readonly="1"/>
                                    <button name="button_change_ok_line" type="object" string="OK line"/>
                                </group>
                            </group>
                        </page>
                        <page string="Work Instruction"
                              attrs="{'invisible': [('worksheet', '=', False)]}">
                            <field name="worksheet" widget="pdf_viewer"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="mrp_workorder_nest_action">
        <field name="name">Nested Work Orders</field>
        <field name="res_model">mrp.workorder.nest</field>
        <field name="binding_view_types">form</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="mrp_workorder_nest_search"/>
    </record>

    <menuitem action="mrp_workorder_nest_action"
              id="menu_nested_workorder_action"
              parent="mrp.menu_mrp_manufacturing"/>
    <menuitem name="Nest App"
        id="nest_app_menu" action="mrp_workorder_nest_action" sequence="35"
        web_icon="mrp_workorder_grouping_by_material,static/src/img/icon.png"/>
</odoo>
