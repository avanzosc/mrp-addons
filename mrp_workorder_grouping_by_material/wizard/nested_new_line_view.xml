<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.ui.view" id="nested_new_line_form">
        <field name="name">nested.new.line</field>
        <field name="model">nested.new.line</field>
        <field name="arch" type="xml">
            <form string="Nested New Line">
                <group col="4" colspan="4">
                    <field name="nest_code" required="1"/>
                    <field name="product_id" domain="[('id', 'in', possible_product_ids)]"/>
                    <field name="possible_product_ids" invisible="1"/>
                </group>
                <field name="line_ids">
                    <tree editable="top">
                        <field name="workorder_id"
                               domain="[('state', 'not in', ['done', 'cancel'])]"
                               options="{'no_create': True}"/>
                        <field name="product_id" options="{'no_create': True}"/>
                        <field name="qty_producing"/>
                        <field name="qty_produced" readonly="1"/>
                        <field name="qty_nested" readonly="1"/>
                        <field name="qty_production" readonly="1"/>
                    </tree>
                </field>
                <footer>
                    <button string="Done" name="action_done" type="object"
                            class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="nested_new_line_wizard_action" model="ir.actions.act_window">
        <field name="name">Add to Nest</field>
        <field name="res_model">nested.new.line</field>
        <field name="binding_model_id" ref="mrp.model_mrp_workorder" />
        <field name="binding_view_types">list</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="nested_new_line_form" />
        <field name="target">new</field>
    </record>
</odoo>
