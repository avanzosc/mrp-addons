<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record
    id="extended_quality_control_verification_type_tree_view"
    model="ir.ui.view"
  >
        <field name="name">extended.quality.control.verification.type.tree.view</field>
        <field name="model">extended.quality.control.verification.type</field>
        <field name="arch" type="xml">
            <tree editable="top">
                <field name="name" />
            </tree>
        </field>
    </record>

    <record
    id="extended_quality_control_verification_type_search_view"
    model="ir.ui.view"
  >
        <field
      name="name"
    >extended.quality.control.verification.type.search.view</field>
        <field name="model">extended.quality.control.verification.type</field>
        <field name="arch" type="xml">
            <search string="Search production control operations">
                <field name="name" />
            </search>
        </field>
    </record>

    <record
    id="action_extended_quality_control_verif_type_view"
    model="ir.actions.act_window"
  >
        <field name="name">Operations</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">extended.quality.control.verification.type</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
    name="Production Control"
    parent="quality_control_oca.menu_qc_config"
    id="qc_production_control_menu_parent"
    sequence="30"
  />

    <menuitem
    id="extended_quality_control_verif_type_option_view"
    name="Operations"
    action="action_extended_quality_control_verif_type_view"
    parent="qc_production_control_menu_parent"
    groups="mrp.group_mrp_manager"
    sequence="10"
  />
 </odoo>
