<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="extended_quality_control_component_tree_view" model="ir.ui.view">
        <field name="name">extended.quality.control.component.tree.view</field>
        <field name="model">extended.quality.control.component</field>
        <field name="arch" type="xml">
            <tree editable="top">
                <field name="name" />
            </tree>
        </field>
    </record>
    <record id="extended_quality_control_component_search_view" model="ir.ui.view">
        <field name="name">extended.quality.control.component.search.view</field>
        <field name="model">extended.quality.control.component</field>
        <field name="arch" type="xml">
            <search string="Search production control components">
                <field name="name" />
            </search>
        </field>
    </record>

    <record
    id="action_extended_quality_control_component_view"
    model="ir.actions.act_window"
  >
        <field name="name">Components</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">extended.quality.control.component</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
    id="extended_quality_control_component_option_view"
    name="Components"
    action="action_extended_quality_control_component_view"
    parent="qc_production_control_menu_parent"
    groups="mrp.group_mrp_manager"
    sequence="30"
  />
 </odoo>
