<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="product_template_view_tree" model="ir.ui.view">
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view" />
        <field name="arch" type="xml">
            <field name="uom_id" position="after">
                <field name="density" />
            </field>
        </field>
    </record>

    <record id="product_template_view_form" model="ir.ui.view">
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view" />
        <field name="arch" type="xml">
            <div name="volume" position="after">
                <label for="density" />
                <div class="o_row" name="density" >
                    <field name="density" string="Density"/>
                </div>
            </div>
        </field>
    </record>

    <record id="product_template_view_search" model="ir.ui.view">
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_search_view" />
        <field name="arch" type="xml">
            <field name="pricelist_id" position="after">
                <field name="density" />
            </field>
            <xpath expr="//filter[@name='consumable']" position="after">
                <separator/>
                <filter string="Density"
                        name="group_by_density"
                        domain="[]"
                        context="{'group_by': 'density'}"/>
            </xpath>
        </field>
    </record>
</odoo>
