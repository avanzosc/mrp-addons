<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="mrp_bom_view_form" model="ir.ui.view">
        <field name="model">mrp.bom</field>
        <field name="inherit_id" ref="mrp.mrp_bom_form_view" />
        <field name="arch" type="xml">
            <xpath
        expr="//field[@name='bom_line_ids']/tree/field[@name='product_qty']"
        position="before"
      >
                <field name="layer" />
                <field name="designator" />
            </xpath>
        </field>
    </record>

    <record id="mrp_bom_line_view_form" model="ir.ui.view">
        <field name="model">mrp.bom.line</field>
        <field name="inherit_id" ref="mrp.mrp_bom_line_view_form" />
        <field name="arch" type="xml">
            <field name="operation_id" position="after">
                <field name="layer" />
                <field name="designator" />
            </field>
        </field>
    </record>
</odoo>
