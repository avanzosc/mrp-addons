<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="mrp_production_form_view" model="ir.ui.view">
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view" />
        <field name="arch" type="xml">
            <xpath
        expr="//field[@name='move_raw_ids']/tree/field[@name='quantity_done']"
        position="after"
      >
                <field name="price_unit" optional="hide" />
                <field
          name="estimated_material_cost_to_consume"
          sum="Estimated Total Cost"
          optional="show"
        />
                <field
          name="real_cost_consumed_material"
          sum="Real Cost Consumed Material"
          optional="show"
        />
            </xpath>
            <notebook position="before">
                <group name="estimated_cost_info" col="6">
                    <group colspan="2">
                        <field name="cost_manufacturing_estimated" />
                    </group>
                    <group colspan="2">
                        <field name="real_manufacturing_cost" readonly="1" />
                    </group>
                    <group colspan="2">
                        <field name="price_unit_cost" readonly="1" />
                    </group>
                </group>
            </notebook>
        </field>
    </record>

    <record model="ir.ui.view" id="mrp_production_tree_view">
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_tree_view" />
        <field name="arch" type="xml">
            <field name="production_real_duration" position="after">
                <field
          name="estimated_material_cost"
          sum="Estimated Material Cost"
          optional="hide"
        />
                <field
          name="cost_workorder_estimated"
          sum="Estimated Work Cost"
          optional="hide"
        />
                <field
          name="cost_manufacturing_estimated"
          sum="Estimated Manufacturing Cost"
          optional="show"
        />
                <field
          name="real_material_cost"
          sum="Total Real Material Cost"
          optional="hide"
        />
                <field
          name="cost_workorder_real"
          sum="Total Real Work Cost"
          optional="hide"
        />
                <field
          name="real_manufacturing_cost"
          sum="Real Manufacturing Cost"
          optional="show"
        />
                <field name="price_unit_cost" optional="show" />
            </field>
        </field>
    </record>

    <record id="action_cost_in_mrp_production" model="ir.actions.server">
        <field name="name">Put Cost</field>
        <field name="model_id" ref="mrp.model_mrp_production" />
        <field name="binding_model_id" ref="mrp.model_mrp_production" />
        <field name="type">ir.actions.server</field>
        <field name="state">code</field>
        <field name="code">
            if records:
                records._put_cost_in_mrp_production()
        </field>
    </record>
</odoo>
