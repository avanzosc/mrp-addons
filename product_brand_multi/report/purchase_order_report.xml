<?xml version="1.0" encoding="utf-8" ?>
<odoo>
        <template
      id="report_purchasequotation_document_inh_product_brand_multi"
      inherit_id="purchase.report_purchasequotation_document"
    >
            <xpath expr="//th[strong[text()='Description']]" position="after">
                <th class="text-left"><strong>Product brand code</strong></th>
            </xpath>
            <xpath expr="//span[@t-field='order_line.name']/.." position="after">
                <td>
                    <span t-field="order_line.product_brand_code" />
                </td>
            </xpath>
        </template>
        <template
      id="report_purchaseorder_document_inh_product_brand_multi"
      inherit_id="purchase.report_purchaseorder_document"
    >
            <xpath expr="//th[strong[text()='Description']]" position="after">
                <th class="text-left"><strong>Product brand code</strong></th>
            </xpath>
            <xpath expr="//span[@t-field='line.name']/.." position="after">
                <td>
                    <span t-field="line.product_brand_code" />
                </td>
            </xpath>
        </template>
</odoo>
