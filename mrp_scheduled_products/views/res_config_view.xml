<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.ui.view" id="mrp_config_settings_scheduled">
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="mrp.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='mrp_repair']" position="before">
                <div class="col-xs-12 col-md-6 o_setting_box" id="editable_scheduled_products">
                    <div class="o_setting_left_pane">
                        <field name="group_editable_scheduled_products"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="group_editable_scheduled_products"/>
                        <div class="text-muted">
                            Make editable scheduled products on manufacturing orders.
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
