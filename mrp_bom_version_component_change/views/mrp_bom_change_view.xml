<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
       <record id="mrp_bom_change_tree_view" model="ir.ui.view">
            <field name="model">mrp.bom.change</field>
            <field name="inherit_id" ref="mrp_bom_component_change.mrp_bom_change_tree_view" />
            <field name="arch" type="xml">
                <field name="name" position="after">
                    <field name="create_new_version" />
                </field>
            </field>
        </record>

        <record id="mrp_bom_change_form_view" model="ir.ui.view">
            <field name="model">mrp.bom.change</field>
            <field name="inherit_id" ref="mrp_bom_component_change.mrp_bom_change_form_view" />
            <field name="arch" type="xml">
                <field name="old_component_id" position="before">
                    <field name="create_new_version" />
                </field>
            </field>
        </record>
    </data>
</odoo>
