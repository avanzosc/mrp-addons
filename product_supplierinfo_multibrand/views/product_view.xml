<?xml version="1.0" encoding="UTF-8" ?>
<openerp>
    <data>
        <record model="ir.ui.view" id="supplier_brand_tree_view">
            <field name="name">supplier.brand.tree</field>
            <field name="model">supplier.brand</field>
            <field name="arch" type="xml">
                <tree string="Supplier brand" editable="top">
                    <field name="supplier_brand_name" />
                    <field name="supplier_brand_code" />
                    <field name="supplier_id" />
                    <field name="brand_id" />
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="supplier_brand_form_view">
            <field name="name">supplier.brand.form</field>
            <field name="model">supplier.brand</field>
            <field name="arch" type="xml">
                <form string="Supplier brand" editable="top">
                    <group>
                        <field name="supplier_brand_name" string="Name" />
                        <field name="supplier_brand_code" string="Code" />
                        <field name="supplier_id" string="Supplier" />
                        <field name="brand_id" string="Brand" />
                    </group>
                </form>
            </field>
        </record>


        <record model="ir.ui.view" id="supplier_brand_product_form_view">
            <field name="name">supplier.brand.product.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view" />
            <field name="arch" type="xml">
                <page name="sales" position="after">
                    <page name="supplier_brands" string="Supplier Brands">
                        <field name="possible_suppliers" invisible="1" />
                        <field name="possible_brands" invisible="1" />
                        <field name="supplier_brand" nolabel="1">
                            <tree string="Supplier brand" editable="bottom">
                                <field
                  name="supplier_id"
                  domain="[('id', 'in', parent.possible_suppliers[0][2])]"
                />
                                <field name="supplier_brand_name" />
                                <field name="supplier_brand_code" />
                                <field
                  name="brand_id"
                  string="Brand"
                  domain="[('id', 'in', parent.possible_brands[0][2])]"
                />
                            </tree>
                        </field>
                    </page>
                </page>
            </field>
        </record>

    </data>
</openerp>
