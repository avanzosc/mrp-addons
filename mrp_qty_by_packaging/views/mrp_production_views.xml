<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="mrp_production_form_view" model="ir.ui.view">
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view" />
        <field name="arch" type="xml">
            <div name="bom_div" position="after">
                <label for="product_packaging_id" name="product_packaging" />
                <div class='o_row' name="product_packaging">
                    <field name="product_packaging_id" />
                </div>
                <label for="product_packaging_qty" name="product_packaging_qty" />
                <div class='o_row' name="product_packaging_qty">
                    <field name="product_packaging_qty" />
                </div>
            </div>
        </field>
    </record>

    <record id="mrp_production_tree_view" model="ir.ui.view">
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_tree_view" />
        <field name="arch" type="xml">
            <field name="state" position="before">
                <field name="product_packaging_id" optional="show" />
                <field name="product_packaging_qty" optional="show" />
            </field>
        </field>
    </record>

    <record id="view_mrp_production_filter" model="ir.ui.view">
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.view_mrp_production_filter" />
        <field name="arch" type="xml">
            <field name="origin" position="after">
                <field name="product_packaging_id" />
            </field>
            <filter name="scheduled_date" position="after">
                    <filter
          string="Packaging"
          name="packaging"
          domain="[]"
          context="{'group_by': 'product_packaging_id'}"
        />
            </filter>
        </field>
    </record>
</odoo>
