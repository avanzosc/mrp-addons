<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="mrp_production_form_view" model="ir.ui.view">
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp_product_loss.mrp_production_form_view" />
        <field name="arch" type="xml">
            <field name="product_loss_qty" position="after">
                <field
          name="estimated_scrap_cost"
          readonly="1"
          sum="Estimated Scrap Cost"
        />
                <field name="real_scrap_cost" readonly="1" sum="real Scrap Cost" />
            </field>
        </field>
    </record>

    <record id="mrp_production_tree_view" model="ir.ui.view">
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp_production_cost.mrp_production_tree_view" />
        <field name="arch" type="xml">
            <field name="estimated_material_cost" position="after">
                <field
          name="estimated_scrap_cost"
          optional="hide"
          sum="Total Estimated Scrap Cost"
        />
            </field>
            <field name="real_material_cost" position="after">
                <field name="real_scrap_cost" optional="hide" sum="Total Scrap Cost" />
            </field>
        </field>
    </record>
</odoo>
